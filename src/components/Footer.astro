const { name = "Boris Grunwald", additionalText = "All rights reserved." } = Astro.props;
---

<footer data-dont-animate class="text-center text-sm text-gray-500 flex justify-center py-4">
  <Prose>
    <p>
      Â© <span id="current-year"></span>
      <span class="font-semibold">{name}</span>. {additionalText}
