---
import ProjectCard, { type Technologies } from "../../components/ProjectCard.astro";
import ProseTextCenter from "../../layouts/ProseTextCenter.astro";
import Section from "../../layouts/Section.astro";

type Project = {
  title: string,
  description: string,
  websiteUrl: string,
  githubUrl: string,
  technologies: Array<Technologies>,
}

const projects : Project[] = [
  {
    title: "Sentence Guesser",
    description: "Sentence Guesser works by taking an English sentence that you provide, translating it to German with DeepL, then returning it to you in the form of a fill-in-the-blanks exercise. I used this personally to practice my german",
    websiteUrl: "https://inspiring-mooncake-9dde2e.netlify.app/",
    githubUrl: "https://github.com/jikol1906/sentence-guesser-react",
    technologies: ["React", "Typescript"],
  },
  {
    title: "Personal Website",
    description: "The website you're on. Made using Astro.js",
    websiteUrl: "test",
    githubUrl: "test",
    technologies: ["Astro", 'Netlify'],
  },
  {
    title: "Visual Sorter",
    description: "Tool I made as a part of a school exercise to visualize\nsorting algorithms. Supports Insertion Sort, Selection Sort and Bubble Sort",
    websiteUrl: "https://jolly-mayer-7c5bfd.netlify.app/",
    githubUrl: "https://github.com/jikol1906/visualSorter",
    technologies: ["Typescript", "Netlify"],
  },
  {
    title: "Fretboard Workout",
    description: "Tool I made to help myself learn all the notes on a guitar's fretboard",
    websiteUrl: "https://infallible-goodall-e54fc8.netlify.app/",
    githubUrl: "https://github.com/jikol1906/fretboard-workout",
    technologies: ["React", "Typescript"],
  },
  {
    title: "Guitar Note Finder",
    description: "Another tool made for learning the fretboard of a guitar",
    websiteUrl: "test",
    githubUrl: "test",
    technologies: ["Javascript"],
  },
  {
    title: "SES-Quiz",
    description: "Quiz I made for Universit√§t Erfurt as a part of International Developmental Language Disorder Awareness Day",
    websiteUrl: "https://jikol1906.github.io/quiz/",
    githubUrl: "https://github.com/jikol1906/quiz",
    technologies: ["Javascript"],
  },
];
---

<Section id="projects" class="bg-[url('src/img/timeline-bg.svg')] bg-no-repeat bg-[length:100%_500px]">
  <ProseTextCenter>
    <h2>Projects</h2>
  </ProseTextCenter>
  <div class="mx-auto grid grid-cols-1 gap-4 py-10 sm:grid-cols-2">
    {projects.map((project) => (
      <ProjectCard
        title={project.title}
        description={project.description}
        websiteUrl={project.websiteUrl}
        githubUrl={project.githubUrl}
        technologies={project.technologies as Technologies[]}
      />
    ))}
  </div>
</Section>