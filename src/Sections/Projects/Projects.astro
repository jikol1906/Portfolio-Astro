  <div data-dont-animate class="mx-auto grid grid-cols-1 gap-4 py-10 sm:grid-cols-2">
    {projects.map((project) => (
      <ProjectCard
        title={project.title}
        description={project.description}
        websiteUrl={project.websiteUrl}
        githubUrl={project.githubUrl}
        noteToDescription={project.noteToDescription}
        technologiesUsed={project.technologiesUsed}
      />
    ))}
