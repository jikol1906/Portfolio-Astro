---
export interface Props {
  id: string;
  addTopPadding?: boolean;
  addBottomPadding?: boolean;
  fullWidth?: boolean;
}

const { id, addTopPadding = true, addBottomPadding = true, fullWidth = false } = Astro.props;

const sectionClasses = [
  addTopPadding ? 'pt-32' : '',
  addBottomPadding ? 'pb-32' : '',
  fullWidth ? '' : 'max-w-4xl'
].join(' ').trim();
---

<section id={id} class={`mx-auto ${sectionClasses} px-4`}>
    <slot />
</section>